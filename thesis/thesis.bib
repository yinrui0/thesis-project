issn = {01480227},
journal = {Journal of Geophysical Research Atmospheres},
keywords = {http://dx.doi.org/10.1029/2011JD016215, doi:10.1029/2011JD016215, Houston, anthropogenic sources, emission inventory, inverse modeling},
