doi = {10.1029/2004JD005674},
file = {:Users/yinruili/Library/Application Support/Mendeley Desktop/Downloaded/Liu, Penner, Herzog - 2005 - Global modeling of aerosol dynamics Model description, evaluation, and interactions between sulfate and non.pdf:pdf},
