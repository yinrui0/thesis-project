file = {:Users/yinruili/Dropbox/emis{\_}constrain/Heald{\_}et{\_}al-2004-Journal{\_}of{\_}Geophysical{\_}Research-{\_}Atmospheres{\_}(1984-2012).pdf:pdf},
isbn = {0148-0227},
issn = {01480227},
journal = {Journal of Geophysical Research D: Atmospheres},
keywords = {Asia,Bayesian synthesis,Carbon monoxide,Inversion,MOPITT,TRACE-P},
number = {23},
