file = {:Users/yinruili/Google Drive/research project/meeting/thesis{\_}papers/Matsui{\_}et{\_}al-2013-Journal{\_}of{\_}Geophysical{\_}Research-{\_}Atmospheres.pdf:pdf},
isbn = {2169-897X},
issn = {21698996},
journal = {Journal of Geophysical Research Atmospheres},
keywords = {aging processes,black carbon,mixing state,optical property,radiative effect,three-dimensional model},
number = {5},
pages = {2304--2326},
title = {{Development and validation of a black carbon mixing state resolved three-dimensional model: Aging processes and radiative impact}},
