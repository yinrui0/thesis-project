doi = {10.5194/acp-12-3289-2012},
file = {:Users/yinruili/Library/Application Support/Mendeley Desktop/Downloaded/Neu, Prather - 2012 - Toward a more physical representation of precipitation scavenging in global chemistry models Cloud overlap and ice.pdf:pdf},
